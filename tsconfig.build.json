{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": false,
		"stripInternal": true,
		"noEmit": false,
		"emitDeclarationOnly": false,
		"moduleResolution": "node",
		"module": "ES2022",
		"target": "ES2020"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}